<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonOutlinedRed" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/secondary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="buttonOutlinedWhite" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondary</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/secondary</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="lineET" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/secondary</item>
        <item name="colorControlActivated">@color/secondary</item>
        <item name="android:textColorHighlight">@color/secondary</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="lineETchat" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/primary_light</item>
        <item name="colorControlActivated">@color/primary_light</item>
        <item name="android:textColorHighlight">@color/primary_light</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="compoeditableusu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
    </style>
    <style name="compoeditablepass">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="imageSpalshHands">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/secondary</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="GenericProgressIndicator" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
    </style>
    <style name="RoundImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button_bg</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="Button.Unirse" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/secondary_light</item>
    </style>
    <style name="faqsquestionStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">fill_horizontal</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>
    <style name="faqsanswersStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">fill_horizontal</item>
    </style>
    <style name="ToolbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ButtonBack" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/secondary</item>
        <item name="android:background">@drawable/baseline_arrow_back_24</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>
