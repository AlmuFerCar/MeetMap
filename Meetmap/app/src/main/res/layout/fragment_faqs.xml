<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FaqsFragment"
    android:id="@+id/faqsfragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@id/rightguide"
        app:layout_constraintStart_toStartOf="@id/leftguide">

        <TextView
            android:id="@+id/tvtittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="48dp"
            android:fontFamily="@font/roboto"
            android:text="@string/faqs"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/rightguide"
            app:layout_constraintStart_toStartOf="@id/leftguide"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/pregunta1"
            style="@style/faqsquestionStyle"
            android:layout_marginTop="24dp"
            android:text="@string/question1"
            app:layout_constraintEnd_toEndOf="@id/rightguide"
            app:layout_constraintStart_toStartOf="@id/leftguide"
            app:layout_constraintTop_toBottomOf="@id/tvtittle"/>

        <TextView
            android:id="@+id/respuesta1"
            style="@style/faqsanswersStyle"
            app:layout_constraintEnd_toStartOf="@id/rightguide"
            app:layout_constraintStart_toEndOf="@id/leftguide"
            app:layout_constraintTop_toBottomOf="@id/pregunta1"
            android:text="@string/answer1" />
        <TextView
            android:id="@+id/pregunta2"
            style="@style/faqsquestionStyle"
            app:layout_constraintEnd_toStartOf="@id/rightguide"
            app:layout_constraintStart_toEndOf="@id/leftguide"
            app:layout_constraintTop_toBottomOf="@id/respuesta1"
            android:layout_marginVertical="20dp"
            android:text="@string/question2" />

        <TextView
            android:id="@+id/respuesta2"
