<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/location_menu_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calendar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/location_menu_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Item Title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/location_menu_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Item Date"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/location_menu_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location Item Time"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
